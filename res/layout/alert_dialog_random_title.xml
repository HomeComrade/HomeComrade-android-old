<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <ImageView
        android:id="@+id/randomDialogSelectShowsButton"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/defaultCellHeight"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:layout_marginRight="17dp"
        android:src="@android:drawable/btn_star_big_off"
        android:contentDescription="@string/remoteCustomRandomShowsList" />
    
    <TextView
        android:id="@+id/randomDialogTitle"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/defaultCellHeight"
        android:layout_toLeftOf="@id/randomDialogSelectShowsButton"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="5dp"
        android:gravity="center_vertical|left"
        android:text="@string/remoteNumberOfEpisodes"
        android:textColor="#000"
        android:textSize="25sp" />
    
</RelativeLayout>